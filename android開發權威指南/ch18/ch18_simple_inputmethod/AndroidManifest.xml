<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="mobile.android.ch18.simple.inputmethod" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="9" />

	<application android:icon="@drawable/icon" android:label="簡單輸入法">
		<activity android:name=".InputMethodSetting"  />

		<service
			android:name="mobile.android.ch18.simple.inputmethod.AndroidInputMethodService"
			android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
				<action android:name="android.view.InputMethod" />
			</intent-filter>
			<meta-data android:name="android.view.im" android:resource="@xml/method" />
		</service>
	</application>
</manifest>