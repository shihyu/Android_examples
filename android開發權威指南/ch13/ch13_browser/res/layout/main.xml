<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_margin="10dp">
		<EditText android:id="@+id/etAddress" android:layout_width="240px"
			android:layout_height="wrap_content" android:layout_marginRight="10dp" />
		<ImageButton android:id="@+id/ibBrowse"
			android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/browser" />
	</LinearLayout>

	<WebView android:id="@+id/webview" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
 