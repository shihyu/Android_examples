<resources>

    <style name="Base.Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--
        The default theme for activities. This does not have any configuration about the splash
        screen.
    -->
    <style name="Theme.SplashScreen" parent="Base.Theme.SplashScreen">
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_700</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">@color/blue_gray_500</item>
        <item name="colorSecondaryVariant">@color/blue_gray_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!--
        The activity theme with animated icon in the splash screen.
    -->
    <style name="Theme.SplashScreen.Animated">
        <!-- The animated icon to be displayed at the center of the splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_hourglass_animated</item>
        <!-- The background color for the splash screen -->
        <item name="android:windowSplashScreenBackground">@color/lime_500</item>
        <!-- The duration, in milliseconds, of the icon animation of the splash screen -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <!-- The branding image displayed at the bottom of the splash screen -->
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding_image</item>
    </style>

</resources>
